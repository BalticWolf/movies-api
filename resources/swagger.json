{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Movies API",
    "description": "API to manage movie data"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "tags": [
    {
      "name": "Movies",
      "description": "API for movies in the system"
    },
    {
      "name": "Reviews",
      "description": "API for reviews in the system"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-KEY"
      }
    }
  },
  "paths": {
    "/movies/{id}": {
      "get": {
        "tags": [
          "Movies"
        ],
        "summary": "Get one movie",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of movie to fetch",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Movie"
            }
          }
        }
      },
      "put": {
        "tags": [
          "Movies"
        ],
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "summary": "Update one movie",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of movie to update",
            "required": true,
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "movie",
            "in": "body",
            "required": true,
            "description": "Movie that we want to create",
            "schema": {
              "$ref": "#/definitions/Movie"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Movie"
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Movies"
        ],
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "summary": "Delete one movie",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of movie to delete",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "204": {
            "description": "Deleted"
          }
        }
      }
    },
    "/movies": {
      "get": {
        "tags": [
          "Movies"
        ],
        "summary": "Get all movies",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Movie"
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Movies"
        ],
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "summary": "Create a new movie",
        "parameters": [
          {
            "name": "movie",
            "in": "body",
            "required": true,
            "description": "Movie that we want to create",
            "schema": {
              "$ref": "#/definitions/Movie"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/Movie"
            }
          }
        }
      }
    },
    "/genres": {
      "get": {
        "tags": [
          "Genres"
        ],
        "summary": "Get all genres",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Genre"
              }
            }
          }
        }
      }
    },
    "/reviews": {
      "post": {
        "tags": [
          "Reviews"
        ],
        "summary": "Add a new review",
        "parameters": [
          {
            "name": "review",
            "in": "body",
            "required": true,
            "description": "Review that we want to create",
            "schema": {
              "$ref": "#/definitions/Review"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/Review"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Movie": {
      "required": [
        "imdbId",
        "title",
        "year",
        "plot",
        "rating",
        "votes",
        "runtime",
        "dateCreated",
        "dateModified"
      ],
      "properties": {
        "id": {
          "type": "integer"
        },
        "imdbId": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "year": {
          "type": "integer"
        },
        "plot": {
          "type": "string"
        },
        "rating": {
          "type": "number"
        },
        "votes": {
          "type": "integer"
        },
        "runtime": {
          "type": "integer"
        },
        "trailerId": {
          "type": "string"
        },
        "dateCreated": {
          "type": "string"
        },
        "dateModified": {
          "type": "string"
        }
      }
    },
    "People": {
      "required": ["name"],
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "Genre": {
      "required": ["name"],
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "Genres": {
      "type": "array",
      "$ref": "#/definitions/Genre"
    },
    "Review": {
      "required": [
        "username",
        "content",
        "movieId"
      ],
      "properties": {
        "id": {
          "type": "integer"
        },
        "username": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "movieId": {
          "type": "integer"
        },
        "dateCreated": {
          "type": "string",
          "format": "date"
        }
      }
    }
  }
}